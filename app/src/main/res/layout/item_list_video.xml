<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivItem"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_header" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:alpha="0.7"
            app:srcCompat="@drawable/vt_play" />
    </RelativeLayout>

    <com.daimajia.slider.library.RobotoTextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:drawableLeft="@mipmap/ic_pin"
        android:drawablePadding="@dimen/_5sdp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="Xuyến xao mùa cúc họa mi đón đông về giữa lòng Hà Nội"
        android:textColor="@color/gray_33"
        android:textSize="@dimen/_13sdp"
        app:typeface="roboto_bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_3sdp"
        android:orientation="horizontal">

        <com.daimajia.slider.library.RobotoTextView
            android:id="@+id/tvType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:ellipsize="end"
            android:ems="4"
            android:maxLines="2"
            android:text="Ở đâu"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_13sdp"
            app:typeface="roboto_bold" />

        <com.daimajia.slider.library.RobotoTextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:drawableLeft="@drawable/vt_time_create"
            android:drawablePadding="@dimen/_5sdp"
            android:gravity="center_vertical"
            android:text="10 giờ trước"
            android:textColor="@color/gray_33"
            android:textSize="@dimen/_13sdp"
            app:typeface="roboto_regular" />

        <com.daimajia.slider.library.RobotoTextView
            android:id="@+id/tvView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:drawableLeft="@drawable/vt_view_count"
            android:drawablePadding="@dimen/_5sdp"
            android:gravity="center_vertical"
            android:text="321"
            android:textColor="@color/gray_33"
            android:textSize="@dimen/_13sdp"
            app:typeface="roboto_regular" />
    </LinearLayout>

</LinearLayout>