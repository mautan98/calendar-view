<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        android:layout_alignParentTop="true"
        android:background="#DBDBDB"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <com.google.android.material.tabs.TabLayout
        android:visibility="gone"
        android:id="@+id/tab_content"
        android:layout_marginTop="5dp"
        app:tabIndicatorHeight="0dp"
        app:tabIndicatorFullWidth="false"
        app:tabMode="fixed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">
        <TextView
            android:textColor="@color/black"
            android:id="@+id/tv_tab1"
            android:gravity="center"
            android:textAllCaps="true"
            android:text="THÔNG TIN"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <View
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#BFBFBF"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tv_tab2"
            android:gravity="center"
            android:textAllCaps="true"
            android:text="THỂ LỆ"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <View
            android:layout_marginLeft="20dp"
            android:background="#BFBFBF"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tv_tab3"
            android:layout_weight="1"
            android:layout_gravity="right"
            android:gravity="center|right"
            android:textAllCaps="true"
            android:text="Điều kiện sử dụng"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <View
        android:layout_alignParentTop="true"
        android:background="#DBDBDB"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.namviet.vtvtravel.widget.WrapContentHeightViewPager
            android:id="@+id/pager_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_below="@+id/pager_content"
            android:layout_marginTop="15dp"
            android:textAllCaps="false"
            android:textColor="#676767"
            android:text="@string/collapse"
            android:background="@drawable/bg_button_chat6"
            android:layout_marginBottom="15dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/btn_collapse"
            android:layout_width="250dp"
            android:layout_height="31dp"/>
    </RelativeLayout>
</LinearLayout>