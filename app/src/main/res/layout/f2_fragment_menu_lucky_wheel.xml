<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data></data>

    <RelativeLayout
        android:focusable="true"
        android:clickable="true"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutBanner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.namviet.vtvtravel.view.f2customview.RoundishImageView
                android:layout_width="match_parent"
                app:cornerRadius="30dp"
                app:roundedCorners="bottomLeft|bottomRight"
                android:layout_height="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/f2_img_banner_pop_up_lucky_wheel"
                app:layout_constraintDimensionRatio="375:195"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/btnBack"
            android:tint="@color/white"
            android:layout_width="51dp"
            android:layout_height="59dp"
            android:padding="20dp"
            android:src="@drawable/f2_ic_back" />


        <TextView
            android:textSize="16dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/white"
            android:textAllCaps="true"
            android:text="Menu"
            android:layout_width="wrap_content"
            android:layout_height="59dp"/>


        <androidx.cardview.widget.CardView
            android:id="@+id/layoutUser"
            android:layout_below="@+id/layoutBanner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="-70dp"
            android:layout_marginEnd="10dp"
            app:cardCornerRadius="9dp"
            app:cardElevation="3dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="26dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginEnd="14dp"
                    android:gravity="center_vertical"
                    android:paddingBottom="12dp"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/imgAvatar"
                        android:layout_width="58dp"
                        android:layout_height="58dp"
                        android:background="@drawable/f2_defaut_user"
                        android:scaleType="centerCrop" />


                    <LinearLayout
                        android:id="@+id/layoutUserInformation"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="18dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_bold"
                            android:textColor="#5D5D5D"
                            android:textSize="20dp" />


                        <TextView
                            android:visibility="gone"
                            android:id="@+id/tvPhone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:text="0986xxxx15"
                            android:textColor="#515151"
                            android:textSize="15dp" />

                        <TextView
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:text="THÔNG TIN CÁ NHÂN"
                            android:textColor="#00918D"
                            android:textSize="15dp" />


                    </LinearLayout>


                    <ImageView
                        android:layout_width="6dp"
                        android:layout_height="11dp" />


                </LinearLayout>





            </LinearLayout>


        </androidx.cardview.widget.CardView>
        
        
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_below="@+id/layoutUser"
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            
            
            <ImageView
                android:clickable="true"
                android:foreground="@drawable/ripple_effect_click"
                android:id="@+id/btnRule"
                android:src="@drawable/f2_img_btn_rule"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintDimensionRatio="345:72"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:focusable="true" />


            <ImageView
                android:focusable="true"
                android:clickable="true"
                android:foreground="@drawable/ripple_effect_click"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/btnRule"
                android:id="@+id/btnGift"
                android:src="@drawable/f2_img_btn_gift"
                app:layout_constraintDimensionRatio="345:72"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>

            <ImageView
                android:focusable="true"
                android:clickable="true"
                android:foreground="@drawable/ripple_effect_click"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/btnGift"
                android:id="@+id/btnPlayRule"
                android:src="@drawable/f2_img_btn_play_rule"
                app:layout_constraintDimensionRatio="345:72"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>

            <ImageView
                android:focusable="true"
                android:clickable="true"
                android:foreground="@drawable/ripple_effect_click"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/btnPlayRule"
                android:id="@+id/btnListGift"
                android:src="@drawable/f2_img_btn_list_persion"
                app:layout_constraintDimensionRatio="345:72"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>
            
            
            
        </androidx.constraintlayout.widget.ConstraintLayout>

        
        
        
        

    </RelativeLayout>
</layout>