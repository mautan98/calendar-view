<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="accountViewModel"
            type="com.namviet.vtvtravel.viewmodel.AccountViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/linearUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="18dp"
            android:background="@drawable/f2_bg_login"
            android:gravity="center_vertical"
            android:paddingStart="1dp"
            android:paddingTop="12dp"
            android:paddingEnd="1dp"
            android:paddingBottom="14dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="17dp"
                android:layout_marginStart="15dp"
                android:background="@drawable/f2_ic_vietnam" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/roboto_regular"
                android:text="+84"
                android:textColor="@color/md_black_1000"
                android:textSize="16dp" />


            <EditText
                android:id="@+id/edtUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:background="@color/white"
                android:fontFamily="@font/roboto_regular"
                android:hint="Số điện thoại"
                android:inputType="phone"
                android:maxLength="12"
                android:textSize="16dp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="18dp"
            android:background="@drawable/f2_bg_login"
            android:gravity="center_vertical"
            android:paddingStart="1dp"
            android:paddingTop="12dp"
            android:paddingEnd="15dp"
            android:paddingBottom="14dp">


            <EditText
                android:id="@+id/edtPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:fontFamily="@font/roboto_regular"
                android:hint="Mật khẩu"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textSize="16dp" />


            <ImageView
                android:id="@+id/imgEyeCovered"
                android:layout_width="19dp"
                android:layout_height="15dp"
                android:src="@drawable/f2_ic_eye_covered" />


            <ImageView
                android:id="@+id/imgEye"
                android:layout_width="19dp"
                android:layout_height="15dp"
                android:src="@drawable/f2_ic_eye"
                android:visibility="gone" />

        </LinearLayout>


        <TextView
            android:id="@+id/tvForgotPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="11dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Quên mật khẩu?"
            android:textColor="#00918D"
            android:textSize="16dp" />


        <TextView
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="18dp"
            android:background="@drawable/f2_bg_round_login"
            android:gravity="center"
            android:paddingTop="12dp"
            android:paddingBottom="14dp"
            android:text="Đăng nhập"
            android:textAllCaps="true"
            android:textColor="@color/white" />

    </LinearLayout>

</layout>