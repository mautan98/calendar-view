<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:background="@color/white"
        android:orientation="vertical"
        android:focusable="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">


            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="14dp"
                android:src="@drawable/f2_ic_back" />


            <TextView
                android:textSize="18dp"
                android:fontFamily="@font/roboto_medium"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Chi tiết thông báo"
                android:textColor="@color/black" />


            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="14dp"
                android:src="@drawable/f2_ic_back"
                android:visibility="invisible" />

        </LinearLayout>

        <View
            android:background="#ececec"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>


        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginEnd="14dp"
            android:layout_marginStart="18dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:textSize="20dp"
                    android:id="@+id/tvTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Chuyến đi Hà Nội - Đà Lạt"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:text="09:18 14/07"
                    android:textSize="14dp" />
            </LinearLayout>


            <ImageView
                android:src="@drawable/ic_bookmark_noti"
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:tint="@color/black" />



        </LinearLayout>

        <TextView
            android:id="@+id/tvMessage"
            android:textColor="@color/black"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="14dp"
            android:layout_marginStart="18dp"
            android:text="text text text text text text text text text text text text text text text text "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <com.ornach.richtext.RichText
            android:id="@+id/btnAgree"
            app:rt_radius="5dp"
            app:rt_backgroundColor="@color/colorPrimary"
            android:textColor="@color/white"
            android:paddingVertical="8dp"
            android:paddingHorizontal="16dp"
            android:layout_marginTop="18dp"
            android:layout_marginStart="18dp"
            android:textAllCaps="true"
            android:text="Đồng ý tham gia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</layout>