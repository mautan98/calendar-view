<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="13dp"
    android:layout_marginEnd="18dp"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imvImage"
            android:layout_width="64dp"
            android:layout_height="71dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/f2_dialog_offline" />

        <LinearLayout
            android:layout_toStartOf="@+id/row"
            android:layout_marginEnd="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toEndOf="@id/imvImage"
            android:orientation="vertical">

            <TextView
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="16dp"
                android:id="@+id/txtTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:text="Gọi thoại giá rẻ"
                android:textColor="#343434" />

            <TextView
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="16dp"
                android:id="@+id/txtDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:text="(200/phút)"
                android:textColor="#6B6B6B" />
        </LinearLayout>

        <ImageView
            android:id="@+id/row"
            android:layout_width="7dp"
            android:layout_height="11dp"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginEnd="12dp"
            android:src="@drawable/f2_itemclick_offline" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E4E4E4" />
</LinearLayout>