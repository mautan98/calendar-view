<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="accountViewModel"
            type="com.namviet.vtvtravel.viewmodel.AccountViewModel" />
    </data>

    <RelativeLayout
        android:clickable="true"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/btnBack"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="18dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="11dp"
                        android:layout_height="19dp"
                        android:src="@drawable/f2_ic_back" />


                </LinearLayout>

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="58dp"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center"
                    android:text="Tạo lại mật khẩu"
                    android:textColor="#585858"
                    android:textSize="20dp" />

                <LinearLayout
                    android:id="@+id/linearPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="54dp"
                    android:layout_marginEnd="18dp"
                    android:background="@drawable/f2_bg_login"
                    android:gravity="center_vertical"
                    android:paddingStart="1dp"
                    android:paddingTop="12dp"
                    android:paddingEnd="15dp"
                    android:paddingBottom="14dp">


                    <EditText
                        android:id="@+id/edtPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:fontFamily="@font/roboto_regular"
                        android:hint="Mật khẩu"
                        android:inputType="textPassword"
                        android:singleLine="true"
                        android:textSize="16dp" />


                    <ImageView
                        android:id="@+id/imgEyeCovered"
                        android:layout_width="19dp"
                        android:layout_height="15dp"
                        android:src="@drawable/f2_ic_eye_covered" />


                    <ImageView
                        android:id="@+id/imgEye"
                        android:layout_width="19dp"
                        android:layout_height="15dp"
                        android:src="@drawable/f2_ic_eye"
                        android:visibility="gone" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="18dp"
                    android:fontFamily="@font/roboto_italic"
                    android:text="Mật khẩu từ 6 ký tự chỉ có chữ, số hoặc chữ và số, không bao gồm chữ hoa và ký tự đặc biệt"
                    android:textColor="#001684"
                    android:textSize="13dp" />

                <LinearLayout
                    android:id="@+id/linearPassword2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginEnd="18dp"
                    android:background="@drawable/f2_bg_login"
                    android:gravity="center_vertical"
                    android:paddingStart="1dp"
                    android:paddingTop="12dp"
                    android:paddingEnd="15dp"
                    android:paddingBottom="14dp">


                    <EditText
                        android:id="@+id/edtPassword2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:fontFamily="@font/roboto_regular"
                        android:hint="Nhập lại mật khẩu"
                        android:inputType="textPassword"
                        android:singleLine="true"
                        android:textSize="16dp" />


                    <ImageView
                        android:id="@+id/imgEyeCovered2"
                        android:layout_width="19dp"
                        android:layout_height="15dp"
                        android:src="@drawable/f2_ic_eye_covered" />


                    <ImageView
                        android:id="@+id/imgEye2"
                        android:layout_width="19dp"
                        android:layout_height="15dp"
                        android:src="@drawable/f2_ic_eye"
                        android:visibility="gone" />

                </LinearLayout>

                <TextView
                    android:id="@+id/btnConfirm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="18dp"
                    android:background="@drawable/f2_bg_round_login"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center"
                    android:paddingTop="12dp"
                    android:paddingBottom="14dp"
                    android:text="Xác nhận"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="16dp" />

            </LinearLayout>
        </ScrollView>

