<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="accountViewModel"
            type="com.namviet.vtvtravel.viewmodel.AccountViewModel" />
    </data>

    <RelativeLayout
        android:clickable="true"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/btnBack"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="18dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="11dp"
                        android:layout_height="19dp"
                        android:src="@drawable/f2_ic_back" />
                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="58dp"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center"
                    android:text="Quên mật khẩu"
                    android:textColor="#585858"
                    android:textSize="20dp" />

                <LinearLayout
                    android:id="@+id/edtPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="18dp"
                    android:background="@drawable/f2_bg_login"
                    android:gravity="center_vertical"
                    android:paddingStart="1dp"
                    android:paddingTop="12dp"
                    android:paddingEnd="1dp"
                    android:paddingBottom="14dp">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="17dp"
                        android:layout_marginStart="15dp"
                        android:background="@drawable/f2_ic_vietnam" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="+84"
                        android:textColor="@color/md_black_1000"
                        android:textSize="16dp" />


                    <EditText
                        android:id="@+id/edtUsername"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:background="@color/white"
                        android:fontFamily="@font/roboto_regular"
                        android:hint="Số điện thoại"
                        android:inputType="phone"
                        android:textSize="16dp" />

                </LinearLayout>

                <TextView
                    android:textStyle="italic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="18dp"
                    android:text="Bạn vui lòng nhập số điện thoại để lấy lại mật khẩu"
                    android:textColor="#001684"
                    android:textSize="13dp" />


                <TextView
                    android:id="@+id/btnNext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="34dp"
                    android:layout_marginEnd="18dp"
                    android:background="@drawable/f2_bg_round_login"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center"
                    android:paddingTop="12dp"
                    android:paddingBottom="14dp"
                    android:text="Tiếp tục"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Đã có tài khoản?"
                        android:textColor="#000000"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/btnBackToLogin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Đăng nhập ngay!"
                        android:textColor="#00918D"
                        android:textSize="14dp" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="100dp">

            <ImageView
                android:id="@+id/imgIcon"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:src="@drawable/f2_bg_account"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="373:172"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0"
                tools:layout_editor_absoluteX="0dp" />

        </android.support.constraint.ConstraintLayout>
    </RelativeLayout>

</layout>