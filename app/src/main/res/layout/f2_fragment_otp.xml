<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="accountViewModel"
            type="com.namviet.vtvtravel.viewmodel.AccountViewModel" />
    </data>

    <LinearLayout
        android:clickable="true"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/btnBack"
            android:layout_width="50dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="18dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="32dp"
                android:src="@drawable/video_top_back"
                android:tint="@color/colorPrimary" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:text="Xác thực mã OTP"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center"
            android:text="Mã OTP đã được gửi đến số điện thoại của bạn. Vui lòng nhập 6 số để xác nhận."
            android:textSize="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center">

            <EditText
                android:id="@+id/et1"
                android:layout_width="40dp"
                android:layout_height="48dp"
                android:background="@drawable/f2_bg_otp_edt"
                android:inputType="phone"
                android:maxLength="1"
                android:textAlignment="center" />

            <android.support.v4.widget.Space
                android:layout_width="20dp"
                android:layout_height="0dp" />

            <EditText
                android:id="@+id/et2"
                android:layout_width="40dp"
                android:layout_height="48dp"
                android:background="@drawable/f2_bg_otp_edt"
                android:inputType="phone"
                android:maxLength="1"
                android:textAlignment="center" />

            <android.support.v4.widget.Space
                android:layout_width="20dp"
                android:layout_height="0dp" />

            <EditText
                android:id="@+id/et3"
                android:layout_width="40dp"
                android:layout_height="48dp"
                android:background="@drawable/f2_bg_otp_edt"
                android:inputType="phone"
                android:maxLength="1"
                android:textAlignment="center" />

            <android.support.v4.widget.Space
                android:layout_width="20dp"
                android:layout_height="0dp" />

            <EditText
                android:id="@+id/et4"
                android:layout_width="40dp"
                android:layout_height="48dp"
                android:background="@drawable/f2_bg_otp_edt"
                android:inputType="phone"
                android:maxLength="1"
                android:textAlignment="center" />

            <android.support.v4.widget.Space
                android:layout_width="20dp"
                android:layout_height="0dp" />

            <EditText
                android:id="@+id/et5"
                android:layout_width="40dp"
                android:layout_height="48dp"
                android:background="@drawable/f2_bg_otp_edt"
                android:inputType="phone"
                android:maxLength="1"
                android:textAlignment="center" />

            <android.support.v4.widget.Space
                android:layout_width="20dp"
                android:layout_height="0dp" />

            <EditText
                android:id="@+id/et6"
                android:layout_width="40dp"
                android:layout_height="48dp"
                android:background="@drawable/f2_bg_otp_edt"
                android:inputType="phone"
                android:maxLength="1"
                android:textAlignment="center" />


        </LinearLayout>

        <TextView
            android:id="@+id/tvWarning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center"
            android:text="Bạn đã nhập sai mã OTP, vui lòng nhập lại!"
            android:textColor="#FF0000"
            android:textSize="16dp"
            android:visibility="invisible" />

        <RelativeLayout
            android:layout_marginTop="34dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvResentOTP"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center"
                android:text="Gửi lại OTP"
                android:textColor="#00918D"
                android:textSize="16dp" />


            <TextView
                android:textColor="#9D9D9D"
                android:textSize="16dp"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/tvResentOTP"
                android:id="@+id/tvTimeLeft"
                android:text="(0 giây)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/tvConfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="18dp"
            android:background="@drawable/f2_bg_button_otp"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:paddingTop="12dp"
            android:paddingBottom="14dp"
            android:text="xác nhận"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="16dp" />

    </LinearLayout>
</layout>
