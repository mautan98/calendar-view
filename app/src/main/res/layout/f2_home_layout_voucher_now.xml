<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data></data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_marginStart="12dp"
            android:layout_marginTop="13dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_weight="1"
                android:textColor="@color/md_black_1000"
                android:textSize="20dp"
                android:fontFamily="@font/roboto_medium"
                android:text="Khuyến mãi hiện hành"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/btnSeeMore"
                android:textColor="#00918D"
                android:layout_marginEnd="14dp"
                android:textSize="14dp"
                android:fontFamily="@font/roboto_regular"
                android:text="Xem thêm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="19dp"
            android:layout_marginStart="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


<!--            <include layout="@layout/f2_item_home_tab_suggestion_location"/>-->

<!--            <include layout="@layout/f2_item_home_tab_suggestion_location"/>-->

<!--            <include layout="@layout/f2_item_home_tab_suggestion_location"/>-->

<!--            <include layout="@layout/f2_item_home_tab_suggestion_location"/>-->


            <androidx.recyclerview.widget.RecyclerView
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:id="@+id/rclTab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>



        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.recyclerview.widget.RecyclerView
                android:minHeight="120dp"
                android:id="@+id/rclContent"
                android:visibility="visible"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/shimmer_view_container"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_gravity="top"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <include layout="@layout/data_placeholder_layout" />


                </LinearLayout>

            </com.facebook.shimmer.ShimmerFrameLayout>
        </FrameLayout>
        <ImageView
            android:id="@+id/imv_no_voucher_now"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            android:src="@drawable/img_no_deal_data" />


        <View
            android:layout_marginTop="20dp"
            android:background="#ECECEC"
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

    </LinearLayout>

</layout>