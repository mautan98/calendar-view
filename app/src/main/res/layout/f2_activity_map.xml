<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data></data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/mainFrame"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


        <LinearLayout
            android:id="@+id/linearItem"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="70dp"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="4dp"
                app:cardUseCompatPadding="true">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:background="@drawable/bg_item"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_margin="1dp"
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="4dp">

                        <RelativeLayout
                            android:layout_width="130dp"
                            android:layout_height="160dp">

                            <ImageView
                                android:layout_margin="1dp"
                                android:id="@+id/imgAvatar"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop" />

                            <TextView
                                android:id="@+id/tvLocationName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="6dp"
                                android:layout_marginTop="6dp"
                                android:background="@drawable/f2_item_experience_location_boder"
                                android:fontFamily="@font/roboto_regular"
                                android:paddingStart="5dp"
                                android:paddingTop="1dp"
                                android:paddingEnd="4dp"
                                android:paddingBottom="1dp"
                                android:text="Hà Nội"
                                android:textColor="@color/white"
                                android:textSize="12dp"
                                android:visibility="gone" />

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="18dp"
                                android:layout_alignParentEnd="true"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="10dp"
                                android:src="@drawable/f2_ic_gray_heart"
                                android:visibility="gone" />


                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:layout_marginStart="11dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:fontFamily="@font/roboto_bold"
                            android:maxLines="1"
                            android:text="Nhà Thờ Lớn Hà Nội"
                            android:textColor="#3B3B3B"
                            android:textSize="14dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvRate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/f2_bg_score"
                                android:fontFamily="@font/roboto_bold"
                                android:paddingLeft="6dp"
                                android:paddingRight="6dp"
                                android:text="9.8"
                                android:textColor="#FFFFFF"
                                android:textSize="10dp" />

                            <TextView
                                android:id="@+id/tvRateText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_bold"
                                android:paddingLeft="3dp"
                                android:paddingRight="7dp"
                                android:text="Tuyệt vời"
                                android:textColor="#22558F"
                                android:textSize="12dp" />

                            <View
                                android:layout_width="1dp"
                                android:layout_height="12dp"
                                android:layout_gravity="center"
                                android:background="#B4B4B4" />

                            <ImageView
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:layout_gravity="center"
                                android:layout_marginStart="6dp"
                                android:src="@drawable/f2_ic_view" />

                            <TextView
                                android:id="@+id/tvCommentCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="3dp"
                                android:fontFamily="@font/roboto_regular"
                                android:text="205"
                                android:textColor="#0081FF"
                                android:textSize="12dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="bottom"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/linearOpenType"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:visibility="visible">

                                <TextView
                                    android:id="@+id/tvOpenDate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_medium"
                                    android:textColor="#000000"
                                    android:textSize="12dp" />

                                <View
                                    android:id="@+id/viewTime"
                                    android:layout_width="1dp"
                                    android:layout_height="12dp"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginEnd="5dp"
                                    android:background="#B4B4B4" />

                                <TextView
                                    android:id="@+id/tvOpenTime"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_medium"
                                    android:textColor="#000000"
                                    android:textSize="12dp" />
                            </LinearLayout>


                            <LinearLayout
                                android:id="@+id/linearPriceType"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:visibility="gone">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_medium"
                                    android:text="Giá từ"
                                    android:textColor="#888888" />

                                <TextView
                                    android:id="@+id/tvPriceRange"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_medium"
                                    android:text="1.967.649 đ - 1.967.649 đ"
                                    android:textColor="#000000"
                                    android:textSize="16dp" />

                            </LinearLayout>

                            <TextView
                                android:id="@+id/tvStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_medium"
                                android:textColor="#FF0000"
                                android:textSize="12dp"
                                android:visibility="visible" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="12dp"
                                    android:layout_height="13dp"
                                    android:layout_marginEnd="4dp"
                                    android:src="@drawable/f2_ic_location" />

                                <TextView
                                    android:id="@+id/tvAddress"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="3dp"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/roboto_regular"
                                    android:maxLines="1"
                                    android:singleLine="true"
                                    android:textColor="#5E5E5E"
                                    android:textSize="11dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="8dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="12dp"
                                    android:layout_height="13dp"
                                    android:layout_marginEnd="4dp"
                                    android:src="@drawable/f2_ic_distance" />

                                <TextView
                                    android:id="@+id/tvDistance"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="3dp"
                                    android:fontFamily="@font/roboto_regular"
                                    android:textColor="#5E5E5E"
                                    android:textSize="11dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:visibility="gone">

                                <ImageView
                                    android:id="@+id/imgType"
                                    android:layout_width="16dp"
                                    android:layout_height="17dp" />

                                <TextView
                                    android:id="@+id/tvType"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="3dp"
                                    android:fontFamily="@font/roboto_regular"
                                    android:text="Đi đâu"
                                    android:textColor="#5E5E5E"
                                    android:textSize="11dp" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </RelativeLayout>


</layout>