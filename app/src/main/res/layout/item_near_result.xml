<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>


    </data>

    <RelativeLayout
        android:id="@+id/itemView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/_5sdp"
        android:paddingBottom="@dimen/_5sdp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvItem"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            app:cardCornerRadius="@dimen/_3sdp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/ivPhoto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_toEndOf="@+id/cvItem"
            android:orientation="vertical">

            <com.namviet.vtvtravel.widget.RobotoTextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/md_black_1000"
                android:textSize="@dimen/_12sdp"
                app:typeface="roboto_bold"
                tools:text="Vinh Ha Long" />

            <com.namviet.vtvtravel.widget.RobotoTextView
                android:id="@+id/tvAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:drawableLeft="@drawable/vt_placeholder"
                android:drawablePadding="@dimen/_3sdp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:textSize="@dimen/_12sdp"
                app:typeface="roboto_regular"
                tools:text="Địa chỉ" />

            <com.namviet.vtvtravel.widget.RobotoTextView
                android:id="@+id/tvDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:drawableLeft="@drawable/vt_distance_arrows"
                android:drawablePadding="@dimen/_3sdp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lines="1"
                android:textSize="@dimen/_12sdp"
                app:typeface="roboto_regular"
                tools:text="Địa chỉ" />

            <com.namviet.vtvtravel.widget.RobotoTextView
                android:id="@+id/tvDirection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:drawableLeft="@drawable/vt_time_create"
                android:drawablePadding="@dimen/_4sdp"
                android:gravity="center_vertical"
                android:text="Chỉ đường"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_14sdp"
                android:visibility="invisible"
                app:typeface="roboto_bold" />


        </LinearLayout>


    </RelativeLayout>
</layout>
