<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>


    </data>

    <LinearLayout
        android:id="@+id/itemView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/_4sdp"
        android:paddingTop="@dimen/_5sdp"
        android:paddingRight="@dimen/_4sdp"
        android:paddingBottom="@dimen/_5sdp">

        <LinearLayout
            android:id="@+id/ll_item_view1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_3sdp"
            android:layout_weight="1"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvItem"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_80sdp"
                app:cardCornerRadius="@dimen/_3sdp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/ivPhoto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />
            </androidx.cardview.widget.CardView>

            <com.namviet.vtvtravel.widget.RobotoTextView
                android:id="@+id/tvTitle"
                android:text="Vinh Ha Long"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/gray_33"
                android:textSize="@dimen/_13sdp"
                app:typeface="roboto_regular"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:orientation="horizontal"
                android:visibility="gone">

                <com.namviet.vtvtravel.widget.RobotoTextView
                    android:id="@+id/tvTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/vt_time_create"
                    android:drawablePadding="@dimen/_4sdp"
                    android:gravity="center_vertical"
                    android:text="11/12/2018"
                    android:textColor="@color/gray_99"
                    android:textSize="@dimen/_11sdp"
                    app:typeface="roboto_regular" />

                <com.namviet.vtvtravel.widget.RobotoTextView
                    android:id="@+id/tvViewed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:drawableLeft="@drawable/vt_view_count"
                    android:drawablePadding="@dimen/_3sdp"
                    android:gravity="center_vertical"
                    android:textColor="@color/gray_99"
                    android:textSize="@dimen/_11sdp"
                    app:typeface="roboto_regular"
                    tools:text="Địa chỉ" />
            </LinearLayout>

            <com.namviet.vtvtravel.widget.RobotoTextView
                android:id="@+id/tvShortDes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:drawablePadding="@dimen/_3sdp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:text="Với tôi Đà lại không chỉ có bốn mùa hoa."
                android:textColor="@color/gray_66"
                android:textSize="@dimen/_11sdp"
                android:visibility="gone"
                app:typeface="roboto_regular" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_item_view2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_3sdp"
            android:layout_weight="1"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvItem2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_80sdp"
                app:cardCornerRadius="@dimen/_3sdp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/ivPhoto2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />
            </androidx.cardview.widget.CardView>

            <com.namviet.vtvtravel.widget.RobotoTextView
                android:id="@+id/tvTitle2"
                android:text="Vinh Ha Long"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/gray_33"
                android:textSize="@dimen/_13sdp"
                app:typeface="roboto_regular"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:orientation="horizontal"
                android:visibility="gone">

                <com.namviet.vtvtravel.widget.RobotoTextView
                    android:id="@+id/tvTime2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/vt_time_create"
                    android:drawablePadding="@dimen/_4sdp"
                    android:gravity="center_vertical"
                    android:text="11/12/2018"
                    android:textColor="@color/gray_99"
                    android:textSize="@dimen/_11sdp"
                    app:typeface="roboto_regular" />

                <com.namviet.vtvtravel.widget.RobotoTextView
                    android:id="@+id/tvViewed2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:drawableLeft="@drawable/vt_view_count"
                    android:drawablePadding="@dimen/_3sdp"
                    android:gravity="center_vertical"
                    android:textColor="@color/gray_99"
                    android:textSize="@dimen/_11sdp"
                    app:typeface="roboto_regular"
                    tools:text="Địa chỉ" />
            </LinearLayout>

            <com.namviet.vtvtravel.widget.RobotoTextView
                android:id="@+id/tvShortDes2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:drawablePadding="@dimen/_3sdp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:text="Với tôi Đà lại không chỉ có bốn mùa hoa."
                android:textColor="@color/gray_66"
                android:textSize="@dimen/_11sdp"
                android:visibility="gone"
                app:typeface="roboto_regular" />

        </LinearLayout>

    </LinearLayout>
</layout>
