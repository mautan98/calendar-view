<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data></data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:src="@drawable/f2_ic_receiver_gift"
                    app:layout_constraintDimensionRatio="375:375"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_marginBottom="80dp"
                    android:textSize="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layoutImage"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/btnReceiverNow"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="71dp"
                    android:layout_marginEnd="35dp"
                    android:src="@drawable/f2_ic_btn_receive_now"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="278:48" />


            </androidx.constraintlayout.widget.ConstraintLayout>


            <ImageView
                android:layout_gravity="center_horizontal"
                android:id="@+id/btnClose"
                android:layout_marginTop="27dp"
                android:src="@drawable/f2_btn_close_popup_lucky_wheel"
                android:layout_width="37dp"
                android:layout_height="37dp"/>

        </LinearLayout>
    </RelativeLayout>
</layout>