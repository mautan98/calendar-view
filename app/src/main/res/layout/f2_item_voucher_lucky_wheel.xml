<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tool="http://schemas.android.com/tools"
    android:background="#EEEEEE"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    
    <com.ornach.richtext.RichView
        android:gravity="center_vertical"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        app:rt_backgroundColor="@color/white"
        app:rt_radius="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imgAvatar"
            android:scaleType="centerCrop"
            android:src="@drawable/test_voucher"
            app:riv_corner_radius="6dp"
            android:layout_width="76dp"
            android:layout_height="76dp"/>
        
        
        <LinearLayout
            android:layout_weight="1"
            android:layout_marginStart="9dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tvTitle"
               android:textColor="#000000"
                android:textSize="14dp"
                android:fontFamily="@font/roboto_medium"
                android:lines="2"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Khám Phá Đà Nẵng - Ngũ Hành Sơn - Hội An ..."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/tvOutDate"
                android:textSize="12dp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="#686868"
                android:layout_marginTop="6dp"
                tool:text="HSD : 31.07.2020"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            
            
            
        </LinearLayout>
        
        
        <ImageView
            android:padding="7dp"
            android:visibility="gone"
            android:src="@drawable/f2_ic_selected_lucky_wheel"
            android:id="@+id/imgSelected"
            android:layout_marginStart="11dp"
            android:layout_marginEnd="11dp"
            android:layout_width="33dp"
            android:layout_height="33dp"/>

        <ImageView
            android:padding="7dp"
            android:src="@drawable/f2_ic_unselected_lucky_wheel"
            android:id="@+id/imgUnSelected"
            android:layout_marginStart="11dp"
            android:layout_marginEnd="11dp"
            android:layout_width="33dp"
            android:layout_height="33dp"/>
        
        
        
    </com.ornach.richtext.RichView>



</LinearLayout>