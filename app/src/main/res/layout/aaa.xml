<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_marginTop="23dp"
    android:layout_marginEnd="12dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                app:contentPadding="0dp"

                android:layout_width="0dp"
                android:layout_height="160dp"
                app:cardCornerRadius="5dp"
                app:cardUseCompatPadding="true"
                app:layout_constraintDimensionRatio="130:160"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:id="@+id/imgAvatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />

            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/roboto_bold"
                android:maxLines="1"
                android:text="Tam Claypot Rice"
                android:textColor="#000000"
                android:textSize="14dp" />

            <TextView
                android:layout_marginTop="3dp"
                android:id="@+id/tvDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/roboto_regular"
                android:maxLines="2"
                android:text="Nếu như bạn muốn ăn những món ăn việt, ngắm nhìn đường phố, hít hà..."
                android:textColor="#000000"
                android:textSize="14dp" />
            <LinearLayout
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.ornach.richtext.RichText
                    android:textSize="10dp"
                    android:gravity="center"
                    android:fontFamily="@font/roboto_bold"
                    tools:text="9.8"
                    app:rt_radius="3dp"
                    app:rt_backgroundColor="#0081FF"
                    android:layout_width="27dp"
                    android:textColor="@color/white"
                    android:layout_height="13dp"/>
                
                <TextView
                    android:layout_marginStart="3dp"
                    android:fontFamily="@font/roboto_bold"
                    android:textSize="12dp"
                    android:textColor="#22558F"
                    android:text="Tuyệt vời"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_gravity="center"
                    android:gravity="bottom"
                    android:layout_width="1dp"
                    android:layout_height="12dp"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp"
                    android:background="#707070" />
                <ImageView
                    android:src="@drawable/ic_messager"
                    android:layout_width="14dp"
                    android:layout_height="14dp"/>
                <TextView
                    android:layout_marginStart="3dp"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="12dp"
                    android:textColor="#0081FF"
                    android:text="Tuyệt vời"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="6dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">
                <ImageView
                    android:src="@drawable/ic_calenda"
                    android:layout_width="18dp"
                    android:layout_height="15dp"/>
                <LinearLayout
                    android:layout_marginStart="11dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tvOpenDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        tools:text="Mở cửa T2 - CN"
                        android:textColor="#5E5E5E"
                        android:textSize="12dp" />
                    <TextView
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:paddingRight="5dp"
                        android:paddingLeft="5dp"
                        android:background="@drawable/bg_time_open"
                        tools:text="06:30 - 21:30"
                        android:id="@+id/tvOpenTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="#5E5E5E"
                        android:textSize="12dp" />

                </LinearLayout>




            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/f2_ic_gray_location2"
                    app:tint="#EF940B" />

                <TextView
                    android:id="@+id/tvAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/roboto_regular"
                    android:maxLines="1"
                    android:text="116C2 Trung Tự, Đống Đa..."
                    android:textColor="#5E5E5E"
                    android:textSize="12dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/f2_ic_current_location"
                    app:tint="#0081FF" />

                <TextView
                    android:id="@+id/tvDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Cách bạn 11.4 Km"
                    android:textColor="#5E5E5E"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="12dp"
                    android:layout_marginEnd="8dp"
                    android:background="#707070"
                    android:visibility="gone" />


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/img_type"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:src="@drawable/ic_didau" />

                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Đi đâu"
                    android:textColor="#8A8A8A"
                    android:textSize="12dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right|center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_open_state"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@drawable/bg_circle_green_small_location" />

                    <TextView
                        android:id="@+id/tvOpenState"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="6dp"
                        android:fontFamily="@font/roboto_medium"
                        android:singleLine="true"
                        android:text="Đang mở"
                        android:textColor="#0FB403"
                        android:textSize="12dp" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="23dp"
        android:background="#E8E8E8" />
</LinearLayout>
