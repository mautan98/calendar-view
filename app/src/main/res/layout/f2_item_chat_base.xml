<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:orientation="vertical">

    <TextView

        android:id="@+id/tv_first_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/f2_bg_item_first_time"
        android:gravity="center"
        android:paddingStart="25dp"
        android:paddingTop="5dp"
        android:paddingEnd="25dp"
        android:paddingBottom="5dp"
        android:text="Thứ 3, 25/05/2020"
        android:layout_marginBottom="10dp"
        android:textColor="#3D3D3D"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imv_chat_text"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/f2_ic_chat3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="11dp"
            android:layout_marginEnd="42dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/layoutContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="4dp"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/tv_chat_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#F2F2F2"
                    android:fontFamily="@font/roboto_regular"
                    android:paddingStart="7dp"
                    android:paddingTop="6dp"
                    android:paddingEnd="7dp"
                    android:paddingBottom="5dp"
                    android:text="Chào mừng quý khách đến với cổng du lịch thông minh VTVTravel."
                    android:textColor="#3D3D3D"
                    android:textSize="14sp" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_gravity="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_chat_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Chatbot, "
                    android:textColor="#C2C2C2"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/tv_chat_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="#C2C2C2"
                    android:textSize="11sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>