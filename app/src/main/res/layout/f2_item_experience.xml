<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:foreground="@drawable/ripple_effect_click"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="130dp"
                android:layout_height="160dp"
                app:cardCornerRadius="3dp"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="130dp"
                    android:layout_height="160dp">

                    <ImageView
                        android:id="@+id/imgAvatar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/test_banner" />

                    <TextView
                        android:id="@+id/tvLocationName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:layout_marginTop="6dp"
                        android:background="@drawable/f2_item_experience_location_boder"
                        android:fontFamily="@font/roboto_regular"
                        android:paddingStart="5dp"
                        android:paddingTop="1dp"
                        android:paddingEnd="4dp"
                        android:paddingBottom="1dp"
                        android:text="Hà Nội"
                        android:textColor="@color/white"
                        android:textSize="12dp" />

                    <!--                    <ImageView-->
                    <!--                        android:id="@+id/imgHeart"-->
                    <!--                        android:layout_width="32dp"-->
                    <!--                        android:layout_height="36dp"-->
                    <!--                        android:layout_alignParentEnd="true"-->
                    <!--                        android:layout_marginEnd="10dp"-->
                    <!--                        android:src="@drawable/f2_ic_transparent_heart" />-->

                    <com.like.LikeButton
                        android:id="@+id/imgHeart"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="center"
                        android:layout_marginEnd="10dp"
                        app:anim_scale_factor="4.5"
                        app:icon_size="30dp"
                        app:like_drawable="@drawable/f2_ic_heart"
                        app:unlike_drawable="@drawable/f2_ic_transparent_heart" />


                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="11dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/roboto_bold"
                    android:maxLines="1"
                    android:text="Nhà Thờ Lớn Hà Nội"
                    android:textColor="#3B3B3B"
                    android:textSize="14dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvRate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/f2_bg_score"
                        android:fontFamily="@font/roboto_bold"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:text="9.8"
                        android:textColor="#FFFFFF"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/tvRateText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:paddingLeft="3dp"
                        android:paddingRight="7dp"
                        android:text="Tuyệt vời"
                        android:textColor="#22558F"
                        android:textSize="12dp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="12dp"
                        android:layout_gravity="center"
                        android:background="#B4B4B4" />

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="6dp"
                        android:src="@drawable/f2_ic_view" />

                    <TextView
                        android:id="@+id/tvCommentCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="205"
                        android:textColor="#0081FF"
                        android:textSize="12dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/layoutForRestaurant"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="7dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="16dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_time_open" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/roboto_regular"
                                    android:textColor="#5E5E5E"
                                    android:textSize="12dp"
                                    tools:text="Mở cửa" />


                                <TextView
                                    android:id="@+id/tvOpenDate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="5dp"
                                    android:fontFamily="@font/roboto_medium"
                                    android:textColor="#5E5E5E"
                                    android:textSize="12dp"
                                    tools:text="T2 - CN" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_marginStart="6dp"
                                    android:id="@+id/tvOpenTime"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:background="@drawable/bg_otp_inactive"
                                    android:fontFamily="@font/roboto_regular"
                                    android:paddingLeft="5dp"
                                    android:paddingTop="2dp"
                                    android:paddingRight="5dp"
                                    android:paddingBottom="2dp"
                                    android:textColor="#5E5E5E"
                                    android:textSize="12dp"
                                    tools:text="06:30 - 21:30" />

                                <TextView
                                    android:visibility="gone"
                                    android:layout_marginStart="8dp"
                                    android:id="@+id/tvOpenTime2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:background="@drawable/bg_otp_inactive"
                                    android:fontFamily="@font/roboto_regular"
                                    android:paddingLeft="5dp"
                                    android:paddingTop="2dp"
                                    android:paddingRight="5dp"
                                    android:paddingBottom="2dp"
                                    android:textColor="#5E5E5E"
                                    android:textSize="12dp"
                                    tools:text="06:30 - 21:30" />

                            </LinearLayout>
                        </LinearLayout>

                        <View
                            android:id="@+id/viewTime"
                            android:layout_width="1dp"
                            android:layout_height="12dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="11dp"
                            android:layout_marginEnd="11dp"
                            android:background="#707070"
                            android:visibility="visible" />


                        <View
                            android:layout_width="1dp"
                            android:layout_height="12dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="11dp"
                            android:layout_marginEnd="11dp"
                            android:background="#707070"
                            android:visibility="gone" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/linearPriceType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:text="Giá từ"
                            android:textColor="#888888"
                            android:visibility="invisible" />

                        <TextView
                            android:id="@+id/tvPriceRange"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:textColor="#000000"
                            android:textSize="16dp" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="13dp"
                            android:layout_marginEnd="4dp"
                            android:src="@drawable/f2_ic_location" />

                        <TextView
                            android:id="@+id/tvAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="3dp"
                            android:ellipsize="end"
                            android:fontFamily="@font/roboto_regular"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="#5E5E5E"
                            android:textSize="11dp"
                            tools:text="Ngõ Đình Đại, Hai Bà Trưng, Hà Nội" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="13dp"
                            android:layout_marginEnd="4dp"
                            android:src="@drawable/f2_ic_distance" />

                        <TextView
                            android:id="@+id/tvDistance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="3dp"
                            android:fontFamily="@font/roboto_regular"
                            android:textColor="#5E5E5E"
                            android:textSize="11dp"
                            tools:text="Cách bạn 5km" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="3dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imgType"
                            android:layout_width="16dp"
                            android:layout_height="17dp" />

                        <TextView
                            android:id="@+id/tvType"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="3dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto_regular"
                            android:textColor="#5E5E5E"
                            android:textSize="11dp"
                            tools:text="Đi đâu" />


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">

                            <com.ornach.richtext.RichText
                                android:id="@+id/viewStatus"
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:layout_marginEnd="6dp"
                                app:rt_backgroundColor="#0FB403"
                                app:rt_radius="100dp" />

                            <TextView
                                android:id="@+id/tvStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_medium"
                                android:text="Mở cửa"
                                android:textColor="#FF0000"
                                android:textSize="12dp" />

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="12dp"
            android:background="#ECECEC" />
    </LinearLayout>


</layout>