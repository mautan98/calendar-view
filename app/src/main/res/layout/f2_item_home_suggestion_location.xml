<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data></data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp">


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foreground="@drawable/ripple_effect_click"
            app:cardCornerRadius="4dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:id="@+id/imgBanner"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:scaleType="centerCrop"
                        app:layout_constraintDimensionRatio="334:172"
                        app:layout_constraintTop_toTopOf="parent" />


                    <TextView
                        android:id="@+id/tvPlace"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="7dp"
                        android:background="@drawable/f2_bg_location"
                        android:fontFamily="@font/roboto_regular"
                        android:paddingStart="6dp"
                        android:paddingEnd="6dp"
                        android:text="Hà nội"
                        android:textColor="@color/white"
                        android:textSize="12dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!--                    <ImageView-->
                    <!--                        android:id="@+id/imgHeart"-->
                    <!--                        android:layout_width="32dp"-->
                    <!--                        android:layout_height="36dp"-->
                    <!--                        android:src="@drawable/f2_ic_transparent_heart"-->
                    <!--                        app:layout_constraintEnd_toEndOf="parent"-->
                    <!--                        app:layout_constraintTop_toTopOf="@+id/imgBanner" />-->

                    <com.like.LikeButton
                        android:id="@+id/imgHeart"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        app:anim_scale_factor="4.5"
                        app:icon_size="30dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/imgBanner"
                        app:like_drawable="@drawable/f2_ic_heart"
                        app:unlike_drawable="@drawable/f2_ic_transparent_heart" />
                    
                    
                    
                    
                    <View
                        android:id="@+id/view"
                        android:alpha="0.5"
                        android:background="#000000"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_width="match_parent"
                        android:layout_height="34dp"/>


                    <LinearLayout
                        app:layout_constraintBottom_toBottomOf="@+id/view"
                        app:layout_constraintTop_toTopOf="@+id/view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp">


                        <ImageView
                            android:layout_width="65dp"
                            android:layout_height="13dp"
                            android:src="@drawable/f2_ic_win"
                            android:visibility="gone" />


                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="6dp"
                            android:layout_marginEnd="6dp"
                            android:background="#B4B4B4"
                            android:visibility="gone" />


                        <TextView
                            android:id="@+id/tvRate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/f2_bg_score"
                            android:fontFamily="@font/roboto_bold"
                            android:paddingStart="7dp"
                            android:paddingEnd="6dp"
                            android:text="9.8"
                            android:textColor="@color/white"
                            android:textSize="10dp" />


                        <TextView
                            android:id="@+id/tvRateText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="3dp"
                            android:fontFamily="@font/roboto_bold"
                            android:text="Tuyệt vời"
                            android:textColor="@color/white"
                            android:textSize="12dp" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="6dp"
                            android:layout_marginEnd="6dp"
                            android:background="#B4B4B4" />


                        <ImageView
                            android:layout_marginTop="3dp"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@drawable/f2_ic_view" />


                        <TextView
                            android:id="@+id/tvCommentCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="3dp"
                            android:text="205"
                            android:textColor="@color/white"
                            android:textSize="12dp" />


                    </LinearLayout>
                    
                    

                </androidx.constraintlayout.widget.ConstraintLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginEnd="6dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/roboto_bold"
                        android:lines="2"
                        android:maxLines="2"
                        android:text="Terracotta Hotel &amp; Resort HaNoi đang ưu đãi lớn"
                        android:textColor="@color/md_black_1000"
                        android:textSize="16dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:paddingTop="5dp">

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/f2_ic_distance" />

                    <TextView
                        android:id="@+id/tvDistance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="#575757"
                        android:textSize="10dp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="19dp"
                    android:id="@+id/linearOpenType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <LinearLayout
                        android:id="@+id/layoutForRestaurant"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"

                        android:orientation="horizontal"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/tvOpenDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:text="Mở cửa T2 - CN"
                            android:textColor="#000000"
                            android:textSize="12dp" />

                        <View
                            android:id="@+id/viewTime"
                            android:layout_width="1dp"
                            android:layout_height="12dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:background="#B4B4B4" />

                        <TextView
                            android:id="@+id/tvOpenTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:textColor="#000000"
                            android:textSize="12dp" />
                    </LinearLayout>

                    <TextView
                        android:layout_marginEnd="10dp"
                        android:gravity="end"
                        android:id="@+id/tvStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:textStyle="italic"
                        android:text="Đã đóng"
                        android:textColor="#FF0000"
                        android:textSize="12dp"
                        android:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/linearPriceType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:orientation="vertical"
                    android:paddingTop="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Giá từ"
                        android:textColor="#888888" />

                    <TextView
                        android:id="@+id/tvPriceRange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="#000000"
                        android:textSize="16dp" />

                </LinearLayout>




            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>

</layout>