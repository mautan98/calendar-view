<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="travelModel"
            type="com.namviet.vtvtravel.viewmodel.ItemChildTravelViewModel" />
    </data>

    <RelativeLayout
        android:id="@+id/itemView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingTop="@dimen/_5sdp"
        android:paddingRight="@dimen/_10sdp"
        android:paddingBottom="@dimen/_5sdp">

        <ImageView
            android:id="@+id/ivPhoto"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_70sdp"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_toEndOf="@+id/ivPhoto"
            android:orientation="vertical">

            <com.namviet.vtvtravel.widget.RobotoTextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/md_black_1000"
                app:typeface="roboto_regular"
                tools:text="Vinh Ha Long" />

            <com.namviet.vtvtravel.widget.RobotoTextView
                android:id="@+id/tvAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:drawableLeft="@drawable/vt_placeholder"
                android:drawablePadding="@dimen/_3sdp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:textSize="@dimen/_10sdp"
                tools:text="Địa chỉ" />

            <com.namviet.vtvtravel.widget.RobotoTextView
                android:id="@+id/tvDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:drawableLeft="@drawable/vt_distance"
                android:drawablePadding="@dimen/_3sdp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:textSize="@dimen/_10sdp"
                tools:text="Địa chỉ" />

            <com.namviet.vtvtravel.widget.RobotoTextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:drawableLeft="@drawable/vt_time_create"
                android:drawablePadding="@dimen/_4sdp"
                android:gravity="center_vertical"
                android:textSize="@dimen/_10sdp"
                tools:text="Địa chỉ" />

            <com.namviet.vtvtravel.widget.RobotoTextView
                android:id="@+id/tvViewed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:drawableLeft="@drawable/vt_view_count"
                android:drawablePadding="@dimen/_3sdp"
                android:gravity="center_vertical"
                android:textSize="@dimen/_10sdp"
                tools:text="Địa chỉ" />
        </LinearLayout>


    </RelativeLayout>
</layout>
