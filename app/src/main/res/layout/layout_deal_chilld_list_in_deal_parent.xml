<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/lnl_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:background="#ececec"
            android:paddingBottom="8dp"
            android:paddingTop="10dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:textColor="#515151"
            android:textSize="13dp"
            android:fontFamily="@font/roboto_regular"
            android:text="Để nhận quà của chương trình tích lũy, bạn hãy săn các chương trình sau và tích lũy thời gian giữ chương trình khuyến mại"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:scaleType="centerCrop"
                app:layout_constraintDimensionRatio="1125:132"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/bg_deal_time"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>


            <TextView

                android:ellipsize="end"
                android:singleLine="true"
                android:layout_marginEnd="10dp"
                android:gravity="start"
                app:layout_constraintEnd_toStartOf="@+id/layoutTime"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:fontFamily="@font/roboto_bold"
                android:textAllCaps="true"
                android:text="Danh sách tích lũy (30)"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>


            <LinearLayout
                android:id="@+id/layoutTime"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <com.ornach.richtext.RichText
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp"
                    android:paddingEnd="5dp"
                    android:paddingStart="5dp"
                    app:rt_backgroundColor="#FC3434"
                    app:rt_radius="2dp"
                    android:textSize="12dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/roboto_black"
                    android:text="3 Ngày"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:textColor="#000000"
                    android:fontFamily="@font/roboto_black"
                    android:textSize="14dp"
                    android:text=":"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <com.ornach.richtext.RichText
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp"
                    android:paddingEnd="5dp"
                    android:paddingStart="5dp"
                    app:rt_backgroundColor="#FC3434"
                    app:rt_radius="2dp"
                    android:textSize="12dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/roboto_black"
                    android:text="12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:textColor="#000000"
                    android:fontFamily="@font/roboto_black"
                    android:textSize="14dp"
                    android:text=":"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <com.ornach.richtext.RichText
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp"
                    android:paddingEnd="5dp"
                    android:paddingStart="5dp"
                    app:rt_backgroundColor="#FC3434"
                    app:rt_radius="2dp"
                    android:textSize="12dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/roboto_black"
                    android:text="50"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:textColor="#000000"
                    android:fontFamily="@font/roboto_black"
                    android:textSize="14dp"
                    android:text=":"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <com.ornach.richtext.RichText
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp"
                    android:paddingEnd="5dp"
                    android:paddingStart="5dp"
                    app:rt_backgroundColor="#FC3434"
                    app:rt_radius="2dp"
                    android:textSize="12dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/roboto_black"
                    android:text="08"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <include layout="@layout/layout_header_2"/>

        <LinearLayout
            android:gravity="center_vertical"
            android:background="@color/white"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:paddingStart="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/ic_filter"
                    android:layout_width="18dp"
                    android:layout_height="12dp"/>

                <TextView
                    android:layout_marginStart="4dp"
                    android:textSize="14dp"
                    android:textColor="#757575"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Lọc theo: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rclFilterDeal"
                android:clipToPadding="false"
                android:paddingStart="11dp"
                tools:listitem="@layout/item_filter_deal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </LinearLayout>


        <FrameLayout
            android:minHeight="280dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/shimmer_view_container"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:layout_gravity="top"
                android:orientation="vertical"
                android:visibility="visible">
                <androidx.recyclerview.widget.RecyclerView
                    app:spanCount="2"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    android:orientation="vertical"
                    android:id="@+id/rclContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <include layout="@layout/data_placeholder_layout" />

                    <include layout="@layout/data_placeholder_layout" />

                </LinearLayout>
            </com.facebook.shimmer.ShimmerFrameLayout>
        </FrameLayout>

    </LinearLayout>

    <Button
        android:textSize="16dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:text="Săn ngay"
        android:visibility="gone"
        android:id="@+id/btn_hunt"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:background="@drawable/f3_btn_agree"
        android:layout_width="match_parent"
        android:layout_height="42dp"/>

</LinearLayout>