<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_item_live_channel"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:paddingTop="4dp"
    android:paddingLeft="2dp"
    android:paddingRight="2dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="0dp"
        card_view:cardMaxElevation="0dp"
        card_view:cardElevation="0dp"
        card_view:cardCornerRadius="0dp"
        card_view:cardUseCompatPadding="true"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imv_banner_live_channel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/imv_logo_live_channel"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_alignBottom="@id/imv_banner_live_channel"
                android:layout_alignEnd="@id/imv_banner_live_channel"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="16dp"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>

