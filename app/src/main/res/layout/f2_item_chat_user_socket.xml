<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:layout_marginStart="52dp"
        android:layout_marginEnd="10dp"
        android:layout_weight="1">
        <android.support.v7.widget.CardView
            android:id="@+id/layoutContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/imv_chat_text"
            app:cardCornerRadius="4dp">

            <TextView
                android:background="#C4E5E4"
                android:id="@+id/tv_chat_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="9dp"
                android:paddingBottom="9dp"
                android:text="Tôi muốn đi Đà Nẵng"
                android:textColor="#000000"
                android:textSize="14sp" />
        </android.support.v7.widget.CardView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="8dp"
            android:layout_alignEnd="@id/layoutContent"
            android:layout_below="@id/layoutContent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_chat_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bạn, "
                android:fontFamily="@font/roboto_regular"
                android:textSize="11sp"
                android:textColor="#C2C2C2"/>
            <TextView
                android:id="@+id/tv_chat_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="just now"
                android:fontFamily="@font/roboto_regular"
                android:textSize="11sp"
                android:textColor="#C2C2C2"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/imv_chat_text"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="10dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/f2_defaut_user"/>
    </RelativeLayout>


</LinearLayout>