<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data></data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:clickable="true">

        <include
            android:id="@+id/toolBar"
            layout="@layout/toolbar_text" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolBar"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp">

            <RelativeLayout
                android:id="@+id/llUpdateInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:paddingTop="@dimen/_5sdp">

                <LinearLayout
                    android:id="@+id/ll1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_gravity="center_vertical"
                        android:padding="@dimen/_3sdp"
                        app:srcCompat="@drawable/vt_setting_acc_edit" />

                    <com.namviet.vtvtravel.widget.RobotoTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:ellipsize="end"
                        android:lines="1"
                        android:text="@string/update_info"
                        android:textColor="@color/gray_33"
                        android:textSize="@dimen/_14sdp"
                        app:typeface="roboto_regular" />
                </LinearLayout>


                <View
                    android:id="@+id/view1"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_below="@+id/ll1"
                    android:layout_marginStart="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:alpha="0.5"
                    android:background="@color/gray_99" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/llChangePass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:paddingTop="@dimen/_5sdp">

                <LinearLayout
                    android:id="@+id/ll2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_gravity="center_vertical"
                        android:padding="@dimen/_3sdp"
                        app:srcCompat="@drawable/vt_setting_acc_key" />

                    <com.namviet.vtvtravel.widget.RobotoTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:ellipsize="end"
                        android:lines="1"
                        android:text="@string/change_pass"
                        android:textColor="@color/gray_33"
                        android:textSize="@dimen/_14sdp"
                        app:typeface="roboto_regular" />
                </LinearLayout>


                <View
                    android:visibility="gone"
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_below="@+id/ll2"
                    android:layout_marginStart="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:alpha="0.5"
                    android:background="@color/gray_99" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/llLanguage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:paddingTop="@dimen/_5sdp">

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/ll3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_gravity="center_vertical"
                        android:padding="@dimen/_3sdp"
                        app:srcCompat="@drawable/vt_setting_acc_lang" />

                    <com.namviet.vtvtravel.widget.RobotoTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:ellipsize="end"
                        android:lines="1"
                        android:text="@string/language"
                        android:textColor="@color/gray_33"
                        android:textSize="@dimen/_14sdp"
                        app:typeface="roboto_regular" />
                </LinearLayout>


                <View
                    android:id="@+id/view3"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_below="@+id/ll3"
                    android:layout_marginStart="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:alpha="0.5"
                    android:background="@color/gray_99" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/llNotify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:paddingTop="@dimen/_5sdp">

                <RelativeLayout
                    android:id="@+id/ll4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivIconNotify"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:padding="@dimen/_3sdp"
                        app:srcCompat="@drawable/vt_setting_acc_notify" />

                    <com.namviet.vtvtravel.widget.RobotoTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_toRightOf="@+id/ivIconNotify"
                        android:ellipsize="end"
                        android:lines="1"
                        android:text="@string/receive_notify"
                        android:textColor="@color/gray_33"
                        android:textSize="@dimen/_14sdp"
                        app:typeface="roboto_regular" />

                    <android.support.v7.widget.SwitchCompat
                        android:id="@+id/switchNotify"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:checked="false"
                        app:colorControlActivated="@color/colorPrimary" />
                </RelativeLayout>


                <View
                    android:id="@+id/view4"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_below="@+id/ll4"
                    android:layout_marginStart="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:alpha="0.5"
                    android:background="@color/gray_99" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/llLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:paddingTop="@dimen/_5sdp">

                <LinearLayout
                    android:id="@+id/ll5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView

                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:padding="@dimen/_3sdp"
                        app:srcCompat="@drawable/vt_setting_acc_logout" />

                    <com.namviet.vtvtravel.widget.RobotoTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:ellipsize="end"
                        android:lines="1"
                        android:text="@string/logout"
                        android:textColor="@color/gray_33"
                        android:textSize="@dimen/_14sdp"
                        app:typeface="roboto_regular" />


                </LinearLayout>


                <View
                    android:id="@+id/view5"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_below="@+id/ll5"
                    android:layout_marginStart="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:alpha="0.5"
                    android:background="@color/gray_99"
                    />


            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</layout>