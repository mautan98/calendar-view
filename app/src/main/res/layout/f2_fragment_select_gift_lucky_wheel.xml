<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data></data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#00918D"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="41dp"
                    android:layout_height="49dp"
                    android:padding="15dp"
                    android:src="@drawable/f2_ic_back"
                    android:tint="@color/white" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Chọn quà"
                    android:textColor="@color/white"
                    android:textSize="16dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:id="@+id/btnRegionFilter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="11dp"
                            android:layout_marginTop="7dp"
                            android:fontFamily="@font/roboto_regular"
                            android:text="Khu vực"
                            android:textColor="#A4A4A4"
                            android:textSize="14dp" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="11dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">


                            <TextView
                                android:id="@+id/tvRegionFilterName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/roboto_medium"
                                android:text="Tất cả"
                                android:textColor="@color/md_black_1000"
                                android:textSize="16dp" />


                            <ImageView
                                android:layout_width="7dp"
                                android:layout_height="4dp"
                                android:layout_marginEnd="11dp"
                                android:src="@drawable/f2_ic_arrow_down" />


                        </LinearLayout>


                    </LinearLayout>


                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorPrimary" />


                    <LinearLayout
                        android:id="@+id/btnCategoryFilter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="11dp"
                            android:layout_marginTop="7dp"
                            android:fontFamily="@font/roboto_regular"
                            android:text="Danh mục"
                            android:textColor="#A4A4A4"
                            android:textSize="14dp" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="11dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">


                            <TextView
                                android:id="@+id/tvCategoryFilterName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/roboto_medium"
                                android:text="Tất cả"
                                android:textColor="@color/md_black_1000"
                                android:textSize="16dp" />


                            <ImageView
                                android:layout_width="7dp"
                                android:layout_height="4dp"
                                android:layout_marginEnd="11dp"
                                android:src="@drawable/f2_ic_arrow_down" />


                        </LinearLayout>


                    </LinearLayout>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorPrimary" />


                    <LinearLayout
                        android:id="@+id/btnSort"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="11dp"
                            android:layout_marginTop="7dp"
                            android:fontFamily="@font/roboto_regular"
                            android:text="Sắp xếp"
                            android:textColor="#A4A4A4"
                            android:textSize="14dp" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="11dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">


                            <TextView
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:id="@+id/tvSortName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/roboto_medium"
                                android:text="Mới nhất"
                                android:textColor="@color/md_black_1000"
                                android:textSize="16dp" />


                            <ImageView
                                android:layout_width="7dp"
                                android:layout_height="4dp"
                                android:layout_marginEnd="11dp"
                                android:src="@drawable/f2_ic_arrow_down" />


                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/colorPrimary" />

            </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:background="#EEEEEE"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:id="@+id/rclContent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>


        </LinearLayout>



        
        <ImageView
            android:id="@+id/btnSelectedGift"
            app:layout_constraintDimensionRatio="792:248"
            android:src="@drawable/f2_img_btn_gift_chosen"
            android:layout_marginBottom="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="180dp"
            android:layout_height="0dp"/>



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>